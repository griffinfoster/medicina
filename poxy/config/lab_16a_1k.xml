        <acc_scale>8</acc_scale> <!--Scaling factor by which to scale 'image' before accumulating-->
        <int_acc_len>128</int_acc_len> <!-- Integration length before QDR-->
        <acc_len>256</acc_len> <!-- Number of vectors to accumulate in QDR-->
